<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.computershopsystem">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"
        android:usesCleartextTraffic="true">
        <activity android:name=".View.AddressCheckOutFragment"></activity>
        <activity android:name=".View.InputNoteCheckOutFragement" />
        <activity android:name=".View.VoucherFragment" />
        <activity android:name=".View.InputFullNameRegisterActivity" />
        <activity android:name=".View.CheckOutFragment" />
        <activity android:name=".View.InputCreditCardFragment" />
        <activity android:name=".View.CreditCardFragment" />
        <activity android:name=".View.InputPhoneRegisterActivity" />
        <activity
            android:name=".View.RegisterOTP"
            android:screenOrientation="portrait" />
        <activity
            android:name=".View.AccountNotLogin"
            android:screenOrientation="portrait" />
        <activity
            android:name=".View.SearchNotFound"
            android:screenOrientation="portrait" />
        <activity
            android:name=".View.SearchResult"
            android:screenOrientation="portrait" />
        <activity
            android:name=".View.SearchInput"
            android:screenOrientation="portrait" />
        <activity
            android:name=".View.HomeLoginActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name=".View.CusHomeFragment"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar"
            tools:ignore="Instantiatable" />
        <activity
            android:name=".View.RegisterActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name=".View.LoginWrongActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name=".View.LoginActiveActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity
            android:name=".View.LoginActivity"
            android:theme="@style/Theme.AppCompat.DayNight.NoActionBar" />
        <activity android:name=".View.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />
    </application>

</manifest>